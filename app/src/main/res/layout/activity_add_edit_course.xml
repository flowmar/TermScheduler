<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/addEditCourseNestedScrollView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:elevation="16dp"
	android:pointerIcon="context_menu"
	android:visibility="visible"
	tools:visibility="visible"
	>
<androidx.appcompat.widget.LinearLayoutCompat
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/md_theme_dark_onPrimary"
	android:orientation="vertical"
	android:paddingHorizontal="8dp"
	android:paddingVertical="24dp"
	android:visibility="visible"
	tools:context=".terms.AddEditTermActivity"
	tools:visibility="visible"
	>

	<com.google.android.material.textfield.TextInputEditText
		android:id="@+id/add_edit_course_edit_text_course_name"
		style="@style/edit_text_with_hint"
		android:hint="@string/course_name"
		android:textColorHint="#B388FF"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginVertical="8dp"
		android:baselineAligned="true"
		android:orientation="horizontal"
		>

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/add_edit_course_textview_selected_course_start_date"
			style="@style/date_select_with_hint"
			android:hint="@string/course_start_date"
			android:textColorHint="#B388FF"
			/>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/button_select_course_start_date"
			style="@style/MyButton"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="4"
			android:shadowDx="5"
			android:shadowDy="5"
			android:shadowRadius="3"
			android:text="@string/button_select_start_date_text"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			/>
	</LinearLayout>

	<!-- 	<LinearLayout -->
	<!-- 		android:layout_width="match_parent" -->
	<!-- 		android:layout_height="wrap_content" -->
	<!-- 		android:orientation="horizontal" -->
	<!-- 		android:visibility="gone" -->
	<!-- 		tools:visibility="gone" -->
	<!-- 		> -->
	<!-- 	<ToggleButton -->
